<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:paddingBottom="@dimen/padding_bottom"
    tools:context=".MainActivity">

    <RadioGroup
        android:id="@+id/speed_units_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/speed_units_padding"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/kmh_button"
            style="@style/SpeedUnitsStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/speed_units_kmh" />

        <RadioButton
            android:id="@+id/mph_button"
            style="@style/SpeedUnitsStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/speed_units_mph" />
    </RadioGroup>

    <FrameLayout
        android:id="@+id/left_view"
        style="@style/MiniViewStyle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/speedometer_view"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:id="@+id/speedometer_view"
        style="@style/SpeedometerStyle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <FrameLayout
        android:id="@+id/right_view"
        style="@style/MiniViewStyle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/speedometer_view"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>