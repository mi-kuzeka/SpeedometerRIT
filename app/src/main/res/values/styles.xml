<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CentralViewFrameStyle">
        <item name="android:layout_width">@dimen/speedometer_width</item>
        <item name="android:layout_height">@dimen/speedometer_height</item>
    </style>

    <style name="MiniViewFrameStyle">
        <item name="android:layout_width">@dimen/mini_view_width</item>
        <item name="android:layout_height">@dimen/mini_view_height</item>
    </style>

    <style name="SpeedTextViewStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/drive_numbers</item>
    </style>

    <style name="MiniWidgetTextViewStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/drive_numbers</item>
        <item name="android:textSize">@dimen/mini_view_text_size</item>
        <item name="android:paddingTop">@dimen/mini_view_text_margin</item>
        <item name="android:paddingBottom">@dimen/mini_view_text_margin</item>
    </style>

    <style name="SpeedUnitsStyle">
        <item name="android:background">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/speed_units_text_size</item>
    </style>
</resources>